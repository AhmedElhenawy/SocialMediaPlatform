<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="SocialMediaPlatform.CreatePostController" prefWidth="800" prefHeight="600">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <Label text="Create Post" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"/>
    <Label text="Content:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextArea fx:id="contentField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <Button text="Post" onAction="#createPost" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="2"/>
    <Button text="Back" onAction="#back" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="2"/>
</GridPane>
